<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/btnSelectClassroom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Classroom"/>

    <TextView
        android:id="@+id/tvSelectedClassroom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No classroom selected"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnSelectStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Student"/>

    <TextView
        android:id="@+id/tvSelectedStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No student selected"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tvNoRecords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="No attendance records"
            android:visibility="gone"/>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>
    </FrameLayout>
</LinearLayout>