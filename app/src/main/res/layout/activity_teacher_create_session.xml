<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvCurrentDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tvWifiSSID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WiFi: Detecting..."
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvWifiBSSID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BSSID: -"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnSelectClassroom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Classroom"/>

        <TextView
            android:id="@+id/tvSelectedClassroom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No classroom selected"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnSelectSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Subject"/>

        <TextView
            android:id="@+id/tvSelectedSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No subject selected"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnSelectStartTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Start Time"/>

        <TextView
            android:id="@+id/tvStartTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No time selected"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnSelectEndTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select End Time"/>

        <TextView
            android:id="@+id/tvEndTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No time selected"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnCreateSession"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Session"
            style="@style/Widget.Material3.Button"/>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/btnCreateSession"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>